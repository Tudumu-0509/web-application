pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Tudumu-0509/web-application.git'
            }
        }

        stage('Run Only COPY Tag') {
            steps {
                script {
                    sh """
                        cd ansible-project
                        # Disable host key checking for Ansible
                        export ANSIBLE_HOST_KEY_CHECKING=False
                        ansible-playbook -i inventory/hosts playbook1.yaml --tags copy
                    """
                }
            }
        }
    }
}
