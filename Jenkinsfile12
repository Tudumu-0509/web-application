pipeline {
    agent any

    parameters {
        choice(
            name: 'ANSIBLE_TAG',
            choices: ['install', 'start', 'copy', 'all'],
            description: 'Select Ansible Tag to Run'
        )
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Tudumu-0509/web-application.git'
            }
        }

        stage('Run Ansible With Tags') {
            steps {
                script {

                    if (params.ANSIBLE_TAG == "all") {
                        sh "ansible-playbook playbook1.yaml"
                    } else {
                        sh "ansible-playbook playbook1.yaml --tags ${params.ANSIBLE_TAG}"
                    }

                }
            }
        }
    }
}
