pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Tudumu-0509/web-application.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh """
                        cd ansible-project
                        ansible-playbook -i inventory/hosts playbook1.yaml --tags "install,start,copy,firewall"
                    """
                }
            }
        }
    }
}

