pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Tudumu-0509/web-application.git'
            }
        }

        stage('Run Only COPY Tag') {
            steps {
                script {
                    // Only run "copy" tag
                    sh "ansible-playbook tags.yaml --tags copy"
                }
            }
        }
    }
}

