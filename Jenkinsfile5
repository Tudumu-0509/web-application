pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Select Environment')
    }

    environment {
        AWS_DEFAULT_REGION = "ap-south-1"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform-workspace') {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-cred']]) {
                        // Pass AWS credentials directly to the backend during init
                        sh '''
                        terraform init \
                            -backend-config="tudumuganesh-1" \
                            -backend-config="key=ec2/${ENV}/terraform.tfstate" \
                            -backend-config="region=ap-south-1" \
                            -backend-config="access_key=$AWS_ACCESS_KEY_ID" \
                            -backend-config="secret_key=$AWS_SECRET_ACCESS_KEY"
                        '''
                    }
                }
            }
        }

        stage('Terraform Format & Validate') {
            steps {
                dir('terraform-workspace') {
                    sh '''
                        terraform fmt -check
                        terraform validate
                    '''
                }
            }
        }

        stage('Select Workspace') {
            steps {
                dir('terraform-workspace') {
                    sh """
                        terraform workspace select ${ENV} || terraform workspace new ${ENV}
                    """
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform-workspace') {
                    sh "terraform plan -var-file=env/${ENV}.tfvars -out=tfplan"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform-workspace') {
                    sh "terraform apply -auto-approve tfplan"
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "Terraform Apply Completed Successfully for ${ENV}"
        }
        failure {
            echo "Terraform Pipeline Failed for ${ENV}"
        }
    }
}
