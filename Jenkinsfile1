pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds')
        AWS_DEFAULT_REGION    = "us-east-1"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Tudumu-0509/web-application.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan S3') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -target=aws_s3_bucket.my_bucket'
                }
            }
        }

        stage('Terraform Apply S3') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve -target=aws_s3_bucket.my_bucket'
                }
            }
        }
    }
}
